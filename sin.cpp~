#include <iostream>
#include <cmath>

double sin_(const double);

int main (){

	std::cout.precision(16);
	std::cout.setf(std::ios::scientific);

	double sinx, sinx_, error;
	for(double x = 0; x <= 2*M_PI; x+=0.1){
		sinx = std::sin(x);
		sinx_ = sin_(x);
		error = std::abs(sinx_ - sinx);
    		std::cout << x << "\t" 			//x
			<< sinx << "\t" 		//sinx
			<< sinx_ << "\t"		//sinx_
			<< error << std::endl;		//error
	}
	
	return 0;
}

double sin_(const double x){

	double res = x;
	double term = x;

	double temp = 0;
	double i = 1;
	while(std::abs(temp - res) > 1e-8){
		temp = res;
		term *= -x/(2*i+1) * x/(2*i);
		res += term;
		i++;
	}

	return res;
}
